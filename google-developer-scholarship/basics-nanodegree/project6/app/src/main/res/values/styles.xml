<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_day">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/day_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_month">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/month_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_line">
        <item name="android:gravity">top</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/main_line_text_size</item>
    </style>


    <style name="sub_line">
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">@dimen/sub_line_text_size</item>
    </style>
</resources>
