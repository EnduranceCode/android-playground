<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/globalPadding"
    tools:context="com.endurancecode.quizapp.MainActivity">

    <LinearLayout
        android:id="@+id/leftColumn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontalMargin"
        android:layout_marginRight="@dimen/horizontalMargin"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ituLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/appLogoContentDescription"
            android:paddingBottom="@dimen/globalPadding"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/verticalBigMargin"
            android:text="@string/welcomeText"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/rightColumn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/horizontalMargin"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/verticalBigMargin"
                android:text="@string/welcomeText"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <!-- START: First Question -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/horizontalBigMargin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <EditText
                    android:id="@+id/inputName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:hint="@string/Q1InputHint"
                    android:inputType="textPersonName"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>
            <!-- END: First Question -->

            <!-- START: Second Question -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/horizontalBigMargin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <EditText
                    android:id="@+id/inputCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:hint="@string/Q2InputHint"
                    android:inputType="text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>
            <!-- END: Second Question -->

            <!-- START: Third Question -->
            <RadioGroup
                android:id="@+id/Q3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/horizontalBigMargin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:text="@string/Q3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <RadioButton
                    android:id="@+id/Q3option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q3Option1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <RadioButton
                    android:id="@+id/Q3option2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q3Option2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <RadioButton
                    android:id="@+id/Q3option3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q3Option3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <RadioButton
                    android:id="@+id/Q3option4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q3Option4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <RadioButton
                    android:id="@+id/Q3option5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q3Option5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </RadioGroup>
            <!-- END: Third Question -->

            <!-- START: Fourth Question -->
            <RadioGroup
                android:id="@+id/Q4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/horizontalBigMargin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:text="@string/Q4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <RadioButton
                    android:id="@+id/Q4option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q4Option1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <RadioButton
                    android:id="@+id/Q4option2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q4Option2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <RadioButton
                    android:id="@+id/Q4option3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q4Option3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <RadioButton
                    android:id="@+id/Q4option4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q4Option4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <RadioButton
                    android:id="@+id/Q4option5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q4Option5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <RadioButton
                    android:id="@+id/Q4option6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q4Option6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </RadioGroup>
            <!-- END: Fourth Question -->

            <!-- START: Fifth Question -->
            <RadioGroup
                android:id="@+id/Q5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/horizontalBigMargin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:text="@string/Q5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <RadioButton
                    android:id="@+id/Q5option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q5Option1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <RadioButton
                    android:id="@+id/Q5option2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q5Option2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <RadioButton
                    android:id="@+id/Q5option3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q5Option3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <RadioButton
                    android:id="@+id/Q5option4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q5Option4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <RadioButton
                    android:id="@+id/Q5option5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q5Option5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <RadioButton
                    android:id="@+id/Q5option6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q5Option6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </RadioGroup>
            <!-- END: Fifth Question -->

            <!-- START: Sixth Question -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/horizontalBigMargin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:text="@string/Q6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q6Option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q6Option1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q6Option2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q6Option2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q6Option3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q6Option3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q6Option4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q6Option4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q6Option5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q6Option5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q6Option6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q6Option6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q6Option7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q6Option7"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q6Option8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q6Option8"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q6Option9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q6Option9"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q6Option10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q6Option10"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q6Option11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q6Option11"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q6Option12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q6Option12"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>
            <!-- END: Sixth Question -->

            <!-- START: Seventh Question -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/horizontalBigMargin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:text="@string/Q7"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q7Option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q7Option1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q7Option2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q7Option2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q7Option3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q7Option3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q7Option4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q7Option4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q7Option5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q7Option5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q7Option6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q7Option6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q7Option7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q7Option7"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q7Option8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q7Option8"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q7Option9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q7Option9"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q7Option10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q7Option10"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q7Option11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q7Option11"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <CheckBox
                    android:id="@+id/Q7Option12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Q7Option12"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>
            <!-- END: Seventh Question -->

            <!-- START: Submission Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="calculateScore"
                    android:paddingTop="@dimen/globalPadding"
                    android:text="@string/submitButton" />
            </LinearLayout>
            <!-- END: Submission Button -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>
