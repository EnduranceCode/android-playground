<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.endurancecode.SampleMusicPlayer.MainActivity">

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mp_global_big"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/mp_vertical_big"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/button_play"
            android:textColor="@android:color/white"
            tools:ignore="UnusedAttribute" />


        <Button
            android:id="@+id/button_pause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/mp_vertical_big"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/button_pause"
            android:textColor="@android:color/white"
            tools:ignore="UnusedAttribute" />

        <Button
            android:id="@+id/button_forward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_forward"
            android:textColor="@android:color/white"
            tools:ignore="UnusedAttribute" />
    </LinearLayout>

    <ImageView
        android:id="@+id/logo_endurancecode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/cd_logo_endurancecode"
        android:src="@drawable/logo_endurancecode" />
</RelativeLayout>
