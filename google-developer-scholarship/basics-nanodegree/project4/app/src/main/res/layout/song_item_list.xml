<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/song_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/mp_global_big"
    android:layout_marginLeft="@dimen/mp_global_big"
    android:layout_marginEnd="@dimen/mp_global_big"
    android:layout_marginRight="@dimen/mp_global_big"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/song_album_cover_art"
        android:layout_width="@dimen/song_album_cover_art"
        android:layout_height="@dimen/song_album_cover_art"
        android:layout_marginTop="@dimen/mp_normal_vertical"
        android:layout_marginBottom="@dimen/mp_normal_vertical"
        android:adjustViewBounds="true"
        android:contentDescription="@string/cover_art_content_description"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/mp_global_big"
        android:layout_marginLeft="@dimen/mp_global_big"
        android:layout_marginTop="@dimen/mp_normal_vertical"
        android:layout_marginBottom="@dimen/mp_normal_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_title"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="bottom"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

        <TextView
            android:id="@+id/song_artist"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="top"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />
    </LinearLayout>
</LinearLayout>

