<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.endurancecode.tourguide.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <!--
            Material Design Card View follows the Android Developers Guide at
            https://developer.android.com/guide/topics/ui/layout/cardview
            and the reference at
            https://developer.android.com/reference/android/support/v7/widget/CardView
        -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tourism_office"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mp_global_big"
            card_view:cardCornerRadius="@dimen/card_corner_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/office_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/office_title"
                    android:contentDescription="@string/office_image_description"
                    android:paddingStart="@dimen/mp_global_big"
                    android:paddingLeft="@dimen/mp_global_big"
                    android:paddingTop="@dimen/mp_global_big"
                    android:paddingEnd="@dimen/mp_global_big"
                    android:paddingRight="@dimen/mp_global_big"
                    android:src="@drawable/ic_tourism_office" />

                <TextView
                    android:id="@+id/office_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:padding="@dimen/mp_global_normal"
                    android:text="@string/tourism_office_category"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/culture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mp_global_big"
            android:layout_marginLeft="@dimen/mp_global_big"
            android:layout_marginEnd="@dimen/mp_global_big"
            android:layout_marginRight="@dimen/mp_global_big"
            android:layout_marginBottom="@dimen/mp_global_big"
            android:layout_weight="1"
            android:padding="@dimen/mp_global_normal"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            tools:ignore="NestedWeights">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/culture_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/culture_title"
                    android:contentDescription="@string/culture_image_description"
                    android:paddingStart="@dimen/mp_global_big"
                    android:paddingLeft="@dimen/mp_global_big"
                    android:paddingTop="@dimen/mp_global_big"
                    android:paddingEnd="@dimen/mp_global_big"
                    android:paddingRight="@dimen/mp_global_big"
                    android:src="@drawable/ic_culture" />

                <TextView
                    android:id="@+id/culture_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:padding="@dimen/mp_global_normal"
                    android:text="@string/culture_category"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/park_sport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/mp_global_big"
            android:layout_marginRight="@dimen/mp_global_big"
            android:layout_marginBottom="@dimen/mp_global_big"
            android:layout_weight="1"
            android:padding="@dimen/mp_global_normal"
            card_view:cardCornerRadius="@dimen/card_corner_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/park_sport_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/park_sport_title"
                    android:contentDescription="@string/park_sport_image_description"
                    android:paddingStart="@dimen/mp_global_big"
                    android:paddingLeft="@dimen/mp_global_big"
                    android:paddingTop="@dimen/mp_global_big"
                    android:paddingEnd="@dimen/mp_global_big"
                    android:paddingRight="@dimen/mp_global_big"
                    android:src="@drawable/ic_parks_and_sports" />

                <TextView
                    android:id="@+id/park_sport_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:padding="@dimen/mp_global_normal"
                    android:text="@string/park_sport_category"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/restaurants"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mp_global_big"
            android:layout_marginLeft="@dimen/mp_global_big"
            android:layout_marginEnd="@dimen/mp_global_big"
            android:layout_marginRight="@dimen/mp_global_big"
            android:layout_marginBottom="@dimen/mp_global_big"
            android:layout_weight="1"
            android:padding="@dimen/mp_global_normal"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            tools:ignore="NestedWeights">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/restaurants_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/restaurants_title"
                    android:contentDescription="@string/restaurants_image_description"
                    android:paddingStart="@dimen/mp_global_big"
                    android:paddingLeft="@dimen/mp_global_big"
                    android:paddingTop="@dimen/mp_global_big"
                    android:paddingEnd="@dimen/mp_global_big"
                    android:paddingRight="@dimen/mp_global_big"
                    android:src="@drawable/ic_restaurants" />

                <TextView
                    android:id="@+id/restaurants_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:padding="@dimen/mp_global_normal"
                    android:text="@string/restaurant_category"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/hotels"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/mp_global_big"
            android:layout_marginRight="@dimen/mp_global_big"
            android:layout_marginBottom="@dimen/mp_global_big"
            android:layout_weight="1"
            android:padding="@dimen/mp_global_normal"
            card_view:cardCornerRadius="@dimen/card_corner_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hotels_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/hotels_title"
                    android:contentDescription="@string/hotels_image_description"
                    android:paddingStart="@dimen/mp_global_big"
                    android:paddingLeft="@dimen/mp_global_big"
                    android:paddingTop="@dimen/mp_global_big"
                    android:paddingEnd="@dimen/mp_global_big"
                    android:paddingRight="@dimen/mp_global_big"
                    android:src="@drawable/ic_hotels" />

                <TextView
                    android:id="@+id/hotels_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:padding="@dimen/mp_global_normal"
                    android:text="@string/hotel_category"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
