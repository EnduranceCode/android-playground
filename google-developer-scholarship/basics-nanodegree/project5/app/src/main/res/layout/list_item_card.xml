<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mp_horizontal_big"
        android:layout_marginLeft="@dimen/mp_horizontal_big"
        android:layout_marginTop="@dimen/mp_normal_vertical"
        android:layout_marginEnd="@dimen/mp_horizontal_big"
        android:layout_marginRight="@dimen/mp_horizontal_big"
        android:layout_marginBottom="@dimen/mp_normal_vertical"
        card_view:cardCornerRadius="@dimen/card_corner_radius">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/mp_normal_vertical">

            <ImageView
                android:id="@+id/list_item_card_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/place_card_image"
                tools:src="@drawable/card_posto_turismo" />

            <TextView
                android:id="@+id/list_item_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/mp_normal_horizontal"
                android:paddingLeft="@dimen/mp_normal_horizontal"
                android:paddingTop="@dimen/mp_normal_vertical"
                android:paddingEnd="@dimen/mp_normal_horizontal"
                android:paddingRight="@dimen/mp_normal_horizontal"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                tools:text="Title" />

            <TextView
                android:id="@+id/list_item_card_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/mp_normal_horizontal"
                android:paddingLeft="@dimen/mp_normal_horizontal"
                android:paddingEnd="@dimen/mp_normal_horizontal"
                android:paddingRight="@dimen/mp_normal_horizontal"
                android:paddingBottom="@dimen/mp_normal_vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                tools:text="Subtitle" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>