<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.helloandroid.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/cover" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="34sp"
        android:textColor="#7d97ad"
        android:text="UDACITY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/place"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/place" />

        <TextView
            android:id="@+id/textPlaceLine1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/place"
            android:textSize="16sp"
            android:text="2465 Latham St" />

        <TextView
            android:id="@+id/textPlaceLine2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/place"
            android:layout_below="@id/textPlaceLine1"
            android:textSize="16sp"
            android:text="Mountain View, CA 94043" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/phone"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/phone" />

        <TextView
            android:id="@+id/textPhoneLine1"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_toRightOf="@id/phone"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="650-555-5555" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/url"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/url" />

        <TextView
            android:id="@+id/textUrlLine1"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_toRightOf="@id/url"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:autoLink="web"
            android:text="udacity.com" />
    </RelativeLayout>
</LinearLayout>
